@model Sector45_Bank.Models.Customer
@using Sector45_Bank.Data;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/jose.js"></script>
    <link href="~/Content/loginCSS.css" rel="stylesheet" />
    
</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="wrapper fadeInDown" style="padding:10% 10% 10% 10%">
            <div id="formContent">
                <!-- Login Form -->
                <form action="~/Controllers/User/Index" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h5><font color="red">@ViewBag.message</font></h5>
                    @Html.EditorFor(model => model.TCKN, new { htmlAttributes = new { @onkeypress = "return event.charCode>= 48 &&event.charCode<= 57", @pattern = ".{11,}", @title = "Enter your 11 digit TC number", @type = "text", @placeholder = "TC No", @maxlength = "11", @id = "login", @name = "login", @class = "form-control fadeIn second" } })
                    @Html.ValidationMessageFor(Model => Model.TCKN, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @type = "password", @maxlength = "16", @pattern = ".{8,}", @title = "Please enter at least 8 characters", @placeholder = "Password", @id = "password", @name = "login", @class = "form-control fadeIn third" } })
                    @Html.ValidationMessageFor(Model => Model.password, "", new { @class = "text-danger" })
                    <input type="submit" class="fadeIn fourth" value="Log In">
                </form>
                <!-- register -->
                <div id="formFooter">
                    <a class="underlineHover" href="@Url.Action("Register","User")"><i>Register</i></a>
                </div>
            </div>
        </div>
    }

</body>
</html>
